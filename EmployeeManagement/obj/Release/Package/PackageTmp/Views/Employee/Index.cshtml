﻿@{
    ViewBag.Title = "Employees";
}
<main>
    <div class="container">

        <!--tabla-->
        <table class="table-hover table table-striped">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Posición</th>
                    <th>Oficina</th>
                    <th>Salario</th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="empTable" class="table-primary table-group-divider">
            </tbody>
        </table>

        <!--Añadir empleado Modal-->
        <div id="addEmployeeModal" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Add New Employee</h5>
                        <button type="button" class="close btn btn-light" data-bs-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body">
                        <form id="addEmployeeForm">
                            <div class="form-group mb-2">
                                <label for="employeeName">Nombre</label>
                                <input type="text" class="form-control" id="addEmployeeName" name="Name" required />
                            </div>
                            <div class="form-group mb-2">
                                <label for="employeePosition">Posición</label>
                                <input type="text" class="form-control" id="addEmployeePosition" name="Position" required />
                            </div>
                            <div class="form-group mb-2">
                                <label for="employeeOffice">Oficina</label>
                                <input type="text" class="form-control" id="addEmployeeOffice" name="Office" required />
                            </div>
                            <div class="form-group mb-2">
                                <label for="employeeSalary">Salario</label>
                                <input type="number" class="form-control" id="addEmployeeSalary" name="Salary" required />
                            </div>
                            <button type="submit" class="btn btn-primary">Guardar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Editar empleado modal -->
        <div id="editEmployeeModal" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Edit Employee</h5>
                        <button type="button" class="close btn btn-light" data-bs-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body">
                        <form id="editEmployeeForm">
                            <input type="hidden" id="editEmployeeId" name="Id" />
                            <div class="form-group mb-2">
                                <label for="employeeName">Nombre</label>
                                <input type="text" class="form-control" id="editEmployeeName" name="Name" required />
                            </div>
                            <div class="form-group mb-2">
                                <label for="employeePosition">Posición</label>
                                <input type="text" class="form-control" id="editEmployeePosition" name="Position" required />
                            </div>
                            <div class="form-group mb-2">
                                <label for="employeeOffice">Oficina</label>
                                <input type="text" class="form-control" id="editEmployeeOffice" name="Office" required />
                            </div>
                            <div class="form-group mb-2">
                                <label for="employeeSalary">Salario</label>
                                <input type="number" class="form-control" id="editEmployeeSalary" name="Salary" required />
                            </div>
                            <button type="submit" class="btn btn-primary">Guardar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Eliminar empleado modal -->
        <div id="deleteModal" class="modal fade" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Confirmar eliminación</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>¿Está seguro que desea eliminar este registro?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Eliminar</button>
                    </div>
                </div>
            </div>
        </div>


        <div id="spinner" class="visually-hidden">
            <div class="spinner-border text-info" role="status">
            </div>
        </div>

    </div>

    <button id="addEmployeeBtn" class="btn btn-primary position-fixed bottom-0 end-0 m-5">
        <i class="bi bi-plus-circle p-1"></i>
        Nuevo empleado
    </button>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        let employeesData = [];
        let deleteEmployeeId = null;



        $(document).ready(function () {

            showEmployees();

            // Mostrar empleados
            function showEmployees() {
                $.ajax({
                    url: '@Url.Action("GetEmployees", "Employee")',
                    type: 'GET',
                    dataType: 'json',
                    //Cuando sea 200, añadir cada registro de empleados
                    success: function (data) {
                        employeesData = data;
                        var register = '';
                        $.each(data, function (i, employee) {
                            register += '<tr>';
                            register += '<td>'+employee.Id+'</td>';
                            register += '<td>'+employee.Name+'</td>';
                            register += '<td>'+employee.Position+'</td>';
                            register += '<td>'+employee.Office+'</td>';
                            register += '<td>'+employee.Salary+'</td>';
                            register += '<td><button class="btn btn-sm btn-primary editBtn" data-id="'+employee.Id+'"><i class="bi bi-pencil-fill"></i></button> <button class="btn btn-sm btn-danger deleteBtn" data-id="'+employee.Id+'"><i class="bi bi-trash-fill"></i></button></td>';
                            register += '</tr>';
                        });
                        $('#empTable').html(register);
                    }
                });
            }

            // Botón de añadir usuario
            $('#addEmployeeBtn').click(function () {
                $('#addEmployeeForm')[0].reset();
                $('#addEmployeeModal').modal('show');
            });
            // Formulario de añadir empleado
            $('#addEmployeeForm').submit(function (e) {
                e.preventDefault();
                var formData = $(this).serialize();
                $.ajax({
                    url: '@Url.Action("AddEmployee", "Employee")',
                    type: 'POST',
                    data: formData,
                    success: function (data) {
                        $('#addEmployeeModal').modal('hide');
                        showEmployees();
                    }
                });
            });

            // Botones de editar empleado
            $(document).on('click', '.editBtn', function () {
                var id = $(this).data('id');
                var employee = employeesData.find(function (emp) {
                    return emp.Id == id;
                });

                if (employee) {
                    $('#editEmployeeId').val(employee.Id);
                    $('#editEmployeeName').val(employee.Name);
                    $('#editEmployeePosition').val(employee.Position);
                    $('#editEmployeeOffice').val(employee.Office);
                    $('#editEmployeeSalary').val(employee.Salary);

                    $('#editEmployeeModal').modal('show');
                } else {
                    alert('Employee not found');
                }
            });
            //Formulario edición de empleado
            $('#editEmployeeForm').submit(function (e) {
                e.preventDefault();
                var formData = $(this).serialize();
                $.ajax({
                    url: '@Url.Action("UpdateEmployee", "Employee")',
                    type: 'POST',
                    data: formData,
                    success: function (data) {
                        $('#editEmployeeModal').modal('hide');
                        showEmployees();
                    }
                });
            });

            // Botones de eliminar empleado
            $(document).on('click', '.deleteBtn', function () {
                deleteEmployeeId = $(this).data('id');
                $('#deleteModal').modal('show');
            });

            // Mostrar modal eliminación de empleado
            $('#confirmDeleteBtn').click(function () {
                if (deleteEmployeeId) {
                    $.ajax({
                        url: '@Url.Action("DeleteEmployee", "Employee")/' + deleteEmployeeId,
                        type: 'POST',
                        success: function (data) {
                            $('#deleteModal').modal('hide');
                            showEmployees();
                        },
                        error: function (err) {
                            console.error('Error deleting employee:', err);
                        }
                    });
                }
            });
        });
    </script>

</main>